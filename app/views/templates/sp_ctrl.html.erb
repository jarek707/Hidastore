$ = jQuery.sub()
<%= uc_tab %> = App.<%= uc_tab %>

$.fn.item = ->
  elementID   = $(@).data('id')
  elementID or= $(@).parents('[data-id]').data('id')
  <%= uc_tab %>.find(elementID)

class New extends Spine.Controller
  events:
    'click [data-type=back]': 'back'
    'submit form': 'submit'
    
  constructor: ->
    super
    @active @render
    
  render: ->
    @html @view('<%= lc_tab %>s/new')

  back: ->
    @navigate '/<%= lc_tab %>s'

  submit: (e) ->
    e.preventDefault()
    <%= lc_tab %> = <%= uc_tab %>.fromForm(e.target).save()
#    @navigate '/<%= lc_tab %>s', <%= lc_tab %>.id if <%= lc_tab %>
    return false

class Edit extends Spine.Controller
  events:
    'click [data-type=back]': 'back'
    'submit form': 'submit'
  
  constructor: ->
    super
    @active (params) ->
      @change(params.id)
      
  change: (id) ->
    @item = <%= uc_tab %>.find(id)
    @render()
    
  render: ->
    @html @view('<%= lc_tab %>s/edit')(@item)

  back: ->
    @navigate '/<%= lc_tab %>s'

  submit: (e) ->
    e.preventDefault()
    @item.fromForm(e.target).save()
    @navigate '/<%= lc_tab %>s'

class Show extends Spine.Controller
  events:
    'click [data-type=edit]': 'edit'
    'click [data-type=back]': 'back'

  constructor: ->
    super
    @active (params) ->
      @change(params.id)

  change: (id) ->
    @item = <%= uc_tab %>.find(id)
    @render()

  render: ->
    @html @view('<%= lc_tab %>s/show')(@item)

  edit: ->
    @navigate '/<%= lc_tab %>s', @item.id, 'edit'

  back: ->
    @navigate '/<%= lc_tab %>s'

class Index extends Spine.Controller
  events:
    'click [data-type=edit]':    'edit'
    'click [data-type=destroy]': 'destroy'
    'click [data-type=show]':    'show'
    'click [data-type=new]':     'new'

  constructor: ->
    super
    <%= uc_tab %>.bind 'refresh change', @render
    <%= uc_tab %>.fetch()
    
  render: =>
    #<%= lc_tab %>s = <%= uc_tab %>.all()
    #@html @view('<%= lc_tab %>s/index')(<%= lc_tab %>s: <%= lc_tab %>s)
    
  edit: (e) ->
    item = $(e.target).item()
    @navigate '/<%= lc_tab %>s', item.id, 'edit'
    
  destroy: (e) ->
    item = $(e.target).item()
    item.destroy() if confirm('Sure?')
    
  show: (e) ->
    item = $(e.target).item()
    @navigate '/<%= lc_tab %>s', item.id
    
  new: ->
    @navigate '/<%= lc_tab %>s/new'
    
class App.<%= uc_tab %>s extends Spine.Stack
  controllers:
    index: Index
    edit:  Edit
    show:  Show
    new:   New
    
  routes:
    '/<%= lc_tab %>s/new':      'new'
    '/<%= lc_tab %>s/:id/edit': 'edit'
    '/<%= lc_tab %>s/:id':      'show'
    '/<%= lc_tab %>s':          'index'
    
  default: 'index'
  className: 'stack <%= lc_tab %>s'
