$ = jQuery.sub()
<%= @ctrl.uc_tab %> = App.<%= @ctrl.uc_tab %>

$.fn.item = ->
  elementID   = $(@).data('id')
  elementID or= $(@).parents('[data-id]').data('id')
  <%= @ctrl.uc_tab %>.find(elementID)

class New extends Spine.Controller
  events:
    'click [data-type=back]': 'back'
    'submit form': 'submit'
    
  constructor: ->
    super
    @active @render
    
  render: ->
    @html @view('<%= @ctrl.lc_tab %>s/new')

  back: ->
    @navigate '/<%= @ctrl.lc_tab %>s'

  submit: (e) ->
    e.preventDefault()
    <%= @ctrl.lc_tab %> = <%= @ctrl.uc_tab %>.fromForm(e.target).save()
#    @navigate '/<%= @ctrl.lc_tab %>s', <%= @ctrl.lc_tab %>.id if <%= @ctrl.lc_tab %>
    return false

class Edit extends Spine.Controller
  events:
    'click [data-type=back]': 'back'
    'submit form': 'submit'
  
  constructor: ->
    super
    @active (params) ->
      @change(params.id)
      
  change: (id) ->
    @item = <%= @ctrl.uc_tab %>.find(id)
    @render()
    
  render: ->
    @html @view('<%= @ctrl.lc_tab %>s/edit')(@item)

  back: ->
    @navigate '/<%= @ctrl.lc_tab %>s'

  submit: (e) ->
    e.preventDefault()
    @item.fromForm(e.target).save()
    @navigate '/<%= @ctrl.lc_tab %>s'

class Show extends Spine.Controller
  events:
    'click [data-type=edit]': 'edit'
    'click [data-type=back]': 'back'

  constructor: ->
    super
    @active (params) ->
      @change(params.id)

  change: (id) ->
    @item = <%= @ctrl.uc_tab %>.find(id)
    @render()

  render: ->
    @html @view('<%= @ctrl.lc_tab %>s/show')(@item)

  edit: ->
    @navigate '/<%= @ctrl.lc_tab %>s', @item.id, 'edit'

  back: ->
    @navigate '/<%= @ctrl.lc_tab %>s'

class Index extends Spine.Controller
  events:
    'click [data-type=edit]':    'edit'
    'click [data-type=destroy]': 'destroy'
    'click [data-type=show]':    'show'
    'click [data-type=new]':     'new'

  constructor: ->
    super
    <%= @ctrl.uc_tab %>.bind 'refresh change', @render
    <%= @ctrl.uc_tab %>.fetch()
    
  render: =>
    #<%= @ctrl.lc_tab %>s = <%= @ctrl.uc_tab %>.all()
    #@html @view('<%= @ctrl.lc_tab %>s/index')(<%= @ctrl.lc_tab %>s: <%= @ctrl.lc_tab %>s)
    
  edit: (e) ->
    item = $(e.target).item()
    @navigate '/<%= @ctrl.lc_tab %>s', item.id, 'edit'
    
  destroy: (e) ->
    item = $(e.target).item()
    item.destroy() if confirm('Sure?')
    
  show: (e) ->
    item = $(e.target).item()
    @navigate '/<%= @ctrl.lc_tab %>s', item.id
    
  new: ->
    @navigate '/<%= @ctrl.lc_tab %>s/new'
    
class App.<%= @ctrl.uc_tab %>s extends Spine.Stack
  controllers:
    index: Index
    edit:  Edit
    show:  Show
    new:   New
    
  routes:
    '/<%= @ctrl.lc_tab %>s/new':      'new'
    '/<%= @ctrl.lc_tab %>s/:id/edit': 'edit'
    '/<%= @ctrl.lc_tab %>s/:id':      'show'
    '/<%= @ctrl.lc_tab %>s':          'index'
    
  default: 'index'
  className: 'stack <%= @ctrl.lc_tab %>s'
